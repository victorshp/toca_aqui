<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Esqueci minha senha", new_password_path(resource_name) %>
<% end %>

<br>
<%- if controller_name != 'sessions' %>
  <%= link_to "Já possuo uma conta", new_session_path(resource_name) %>
<% end %>

<br>
<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "Criar nova conta", new_registration_path(resource_name), class:'btn btn-warning' %>
<% end %>

<br>
<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Não recebeu instruções de confirmação?", new_confirmation_path(resource_name) %>
<% end %>

<br>
<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Não recebeu instruções de desbloqueio?", new_unlock_path(resource_name) %><br />
<% end %>

<br>
<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to "Logar com #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider) %><br />
  <% end %>
<% end %>
